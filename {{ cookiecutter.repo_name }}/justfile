set shell := ["zsh", "-cu"]

default:
  just --list

venv: 
  pip install --upgrade uv
  uv venv \
    && source .venv/bin/activate \
    && uv pip sync requirements.txt \
    && uv pip sync requirements-dev.txt

ds:
  uv pip sync requirements-ds.txt

test:
  python -m pytest --doctest-modules ./tests
